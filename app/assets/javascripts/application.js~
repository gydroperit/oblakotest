$(document).on("click", "#submt_lnk", function(){
   $("#MainForm").submit();
});
$("#add_todo").click(function(){
	alert("I am an alert box!");
   $("#MainForm").show();
});
$(document).on("click", "#hide_todo", function(){
   $("#MainForm").hide();
});
$(document).ready(function() {
alert("I am an alert box!");
});
